body{
  background-color:#f0f0f0;
}
.warp{
  width: 100%;
  height: 100%;
  header{
    height: 0.42rem;
    line-height: 0.42rem;
    border-bottom: 1px solid #e5e5e5;
    background-color: #f0f0f0;
    text-align: center;
    font-size:0.36rem;
    color: #333333;
    padding: 0.25rem;
    .back{
      display: block;
      width:0.28rem;
      height: 0.28rem;
      background: url("../images/doctor-01/icon_back.png") no-repeat;
      background-size:0.28rem 0.28rem;
      margin-top:0.1rem;

    }
    .save{
      font-size:0.32rem;

    }
  }
  .main{

    .record_box{
      ul{
        li{
          height:0.8rem;
          line-height:0.8rem;
          font-size: 0.3rem;
          color: #333333;
          padding: 0.25rem;
          background-color: #fff;
          &:nth-child(even){
            background-color: #fafafa;
          };
          input{
            border: none;
            background-color: #fafafa;
            text-align: right;
            margin-top: 0.2rem;


          }
          .yappin{
            margin-top: 0.2rem;
            width: 2.1rem;
            background-color: #fff;

          }
          &:last-child{
            border-bottom: 1px solid #e5e5e5;
          }
        }
      }
      .describe{
        width: 100%;
        text-align: center;
        position: relative;
        &:before{
          display: block;
          content:"";
          width:0.32rem;
          height: 0.32rem;
          background: url("../images/icon1.png") no-repeat;
          background-size:0.32rem 0.32rem;
          position: absolute;
          top: 0.2rem;
          left: 0.2rem;
        }
        &:after{
          display: block;
          content: "";
          width: 1.46rem;
          height: 1.45rem;
          background: url(../images/pic_01.png) no-repeat;
          background-size: 1.46rem 1.45rem;
          position: absolute;
          left: 0.2rem;
          bottom: 0.15rem;
          cursor: pointer;
        }
        textarea{
          width: 100%;
          height: 5.1rem;
          background-color: #fff;
          border: none;
          padding-top: 0.2rem;
          outline: none;
          font-size: 0.28rem;
          color: #c0c0c0;
          padding-left: 0.7rem;
          box-sizing: border-box;


        }
      }
    }
  }
}