//获取手机号
function getMobile(){
    var mobile = $("[name = 'mobile']").val();
    //var mobileReg = /^((0\d{2,3}-\d{7,8})|(1[3584]\d{9}))$/;
    var mobileReg = /^[1][3,4,5,7,8][0-9]{9}$/;
    if(mobileReg.test(mobile) === false){
        layer.open({
            content: '<span>请输入真实有效的手机号</span>'
            ,btn: ['确定',],
            skin:'my-skin'
            ,yes: function(index){
                layer.close(index);
            }
        });
        return 0;
    }
    return mobile;
}
